---
interface Props {
  variant?: 'rings' | 'crosses' | 'hexagon';
  class?: string;
}

const { variant = 'rings', class: className = '' } = Astro.props;

const uniqueId = `geo-${Math.random().toString(36).slice(2, 8)}`;
---

{variant === 'rings' && (
  <svg class={`absolute pointer-events-none ${className}`} viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <defs>
      <linearGradient id={`${uniqueId}-grad`} x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#FD8406" />
        <stop offset="100%" stop-color="#FDDB12" />
      </linearGradient>
    </defs>
    <circle cx="200" cy="200" r="190" stroke={`url(#${uniqueId}-grad)`} stroke-width="0.5" opacity="0.3" />
    <circle cx="200" cy="200" r="140" stroke={`url(#${uniqueId}-grad)`} stroke-width="0.5" opacity="0.2" />
    <circle cx="200" cy="200" r="90" stroke={`url(#${uniqueId}-grad)`} stroke-width="0.5" opacity="0.15" />
    <circle cx="200" cy="200" r="40" stroke={`url(#${uniqueId}-grad)`} stroke-width="0.5" opacity="0.1" />
  </svg>
)}

{variant === 'crosses' && (
  <svg class={`absolute pointer-events-none ${className}`} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <!-- Small cross marks scattered -->
    <g opacity="0.15" stroke="#FD8406" stroke-width="1">
      <line x1="30" y1="25" x2="30" y2="35" />
      <line x1="25" y1="30" x2="35" y2="30" />
      <line x1="150" y1="60" x2="150" y2="70" />
      <line x1="145" y1="65" x2="155" y2="65" />
      <line x1="80" y1="140" x2="80" y2="150" />
      <line x1="75" y1="145" x2="85" y2="145" />
      <line x1="170" y1="160" x2="170" y2="170" />
      <line x1="165" y1="165" x2="175" y2="165" />
    </g>
    <!-- Dots -->
    <g opacity="0.2" fill="#FDDB12">
      <circle cx="60" cy="80" r="1.5" />
      <circle cx="120" cy="30" r="1" />
      <circle cx="180" cy="120" r="1.5" />
      <circle cx="40" cy="170" r="1" />
      <circle cx="100" cy="100" r="2" />
    </g>
  </svg>
)}

{variant === 'hexagon' && (
  <svg class={`absolute pointer-events-none ${className}`} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <defs>
      <linearGradient id={`${uniqueId}-hex`} x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#FD8406" />
        <stop offset="100%" stop-color="#FDDB12" />
      </linearGradient>
    </defs>
    <polygon points="100,10 180,55 180,145 100,190 20,145 20,55" stroke={`url(#${uniqueId}-hex)`} stroke-width="0.5" opacity="0.15" fill="none" />
    <polygon points="100,40 150,70 150,130 100,160 50,130 50,70" stroke={`url(#${uniqueId}-hex)`} stroke-width="0.5" opacity="0.1" fill="none" />
  </svg>
)}
