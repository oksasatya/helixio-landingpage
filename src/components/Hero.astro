---
import { getLocale, t } from '../i18n/utils';
import GridPattern from './decorations/GridPattern.astro';
import GradientOrb from './decorations/GradientOrb.astro';
import GeometricShapes from './decorations/GeometricShapes.astro';

const locale = getLocale(Astro.url.pathname);
const appUrl = import.meta.env.PUBLIC_URL_DASHBOARD;
---

<section class="relative overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-linear-to-b from-background to-[#1A1026] -z-10"></div>
  <!-- Dot grid pattern -->
  <GridPattern variant="dots" class="-z-5 opacity-60" />
  <!-- Gradient orbs -->
  <GradientOrb size="xl" color="primary" class="-top-40 -right-32 opacity-60" />
  <GradientOrb size="lg" color="secondary" class="-bottom-32 -left-24 opacity-40" animate={true} />
  <GradientOrb size="md" color="mixed" class="top-1/3 left-1/4 opacity-20" animate={true} />
  <!-- Geometric rings -->
  <GeometricShapes variant="rings" class="w-72 h-72 md:w-96 md:h-96 -top-12 -right-16 opacity-40" />
  <GeometricShapes variant="crosses" class="w-48 h-48 bottom-32 left-8 opacity-30 hidden md:block" />

  <div class="section-container pt-8! md:pt-16! text-center relative z-10">
    <div class="max-w-4xl mx-auto">
      <!-- Headline -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-4 md:mb-6 text-foreground reveal">
        {t('hero.title', locale)}
      </h1>

      <!-- Subtitle -->
      <p class="text-base sm:text-lg md:text-xl text-muted max-w-2xl mx-auto mb-8 md:mb-10 reveal" style="transition-delay: 0.1s">
        {t('hero.subtitle', locale)}
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center mb-8 reveal" style="transition-delay: 0.2s">
        <a
          href={`${appUrl}/register`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary text-base md:text-lg px-8 py-3.5 w-full sm:w-auto justify-center"
        >
          <i class="fas fa-rocket"></i>
          {t('hero.cta', locale)}
        </a>
        <a href="#features" class="btn-secondary text-base md:text-lg px-8 py-3.5 w-full sm:w-auto justify-center">
          {t('hero.ctaSecondary', locale)}
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>

      <!-- Trust badges -->
      <div class="flex flex-col sm:flex-row flex-wrap gap-3 sm:gap-6 justify-center items-center text-sm text-[var(--color-muted)] reveal" style="transition-delay: 0.3s">
        <span class="flex items-center gap-2">
          <i class="fas fa-check-circle text-[var(--color-success)]"></i>
          {t('hero.trust.noCreditCard', locale)}
        </span>
        <span class="flex items-center gap-2">
          <i class="fas fa-check-circle text-[var(--color-success)]"></i>
          {t('hero.trust.freeForever', locale)}
        </span>
        <span class="flex items-center gap-2">
          <i class="fas fa-check-circle text-[var(--color-success)]"></i>
          {t('hero.trust.quickSetup', locale)}
        </span>
      </div>
    </div>

    <!-- Hero visual placeholder -->
    <div class="mt-10 md:mt-16 max-w-5xl mx-auto reveal" style="transition-delay: 0.4s">
      <div class="relative rounded-xl md:rounded-2xl overflow-hidden shadow-2xl border border-[var(--color-border)]">
        <div class="aspect-[16/9] bg-gradient-to-br from-[var(--color-card)] to-[var(--color-border)] flex items-center justify-center">
          <div class="text-center">
            <i class="fas fa-desktop text-4xl md:text-5xl text-[var(--color-primary)] mb-4 opacity-40"></i>
            <p class="text-[var(--color-muted)] text-xs md:text-sm">Dashboard Preview</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
