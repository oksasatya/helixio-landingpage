---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';
import { t } from '../../i18n/utils';

const locale = 'id';
const highlights = [
  { icon: 'fas fa-align-left', text: t('features.notes.highlight1', locale) },
  { icon: 'fas fa-folder-open', text: t('features.notes.highlight2', locale) },
  { icon: 'fas fa-project-diagram', text: t('features.notes.highlight3', locale) },
  { icon: 'fas fa-paperclip', text: t('features.notes.highlight4', locale) },
];

const limits = [
  { plan: 'Free', value: '5 MB per file' },
  { plan: 'Basic', value: '10 MB per file' },
  { plan: 'Standard', value: '25 MB per file' },
  { plan: 'Pro', value: '100 MB per file' },
];
---

<BaseLayout title={t('meta.notesTitle', locale)} description={t('meta.notesDesc', locale)}>
  <Navbar />

  <!-- Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-b from-background to-[#1A1026] -z-10"></div>
    <div class="section-container text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-medium mb-6 reveal">
        <i class="fas fa-sticky-note"></i>
        {t('features.notes.name', locale)}
      </div>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6 text-foreground reveal max-w-3xl mx-auto">
        {t('features.notes.name', locale)}
      </h1>
      <p class="text-lg text-muted max-w-2xl mx-auto reveal">
        {t('features.notes.desc', locale)}
      </p>
    </div>
  </section>

  <!-- Screenshot placeholder -->
  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto reveal">
      <div class="rounded-2xl overflow-hidden border border-border shadow-xl">
        <div class="aspect-[16/9] bg-linear-to-br from-card to-border flex items-center justify-center">
          <div class="text-center">
            <i class="fas fa-sticky-note text-5xl text-primary opacity-30 mb-3"></i>
            <p class="text-muted text-sm">Notes Editor Screenshot</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Highlights -->
  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {highlights.map(h => (
          <div class="glass-card flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center shrink-0">
              <i class={`${h.icon} text-primary`}></i>
            </div>
            <span class="text-foreground font-medium">{h.text}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Limits -->
  <section class="section-container !pt-0">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold text-center mb-8 text-foreground reveal">
        {locale === 'id' ? 'Batas Upload per Plan' : 'Upload Limits per Plan'}
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 reveal">
        {limits.map(l => (
          <div class="text-center p-4 rounded-xl bg-card border border-border">
            <p class="text-sm text-muted mb-1">{l.plan}</p>
            <p class="text-lg font-bold text-foreground">{l.value}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</BaseLayout>
