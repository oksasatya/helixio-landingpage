---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';
import { t } from '../../i18n/utils';

const locale = 'id';
const highlights = [
  { icon: 'fas fa-sync-alt', text: t('features.calendar.highlight1', locale) },
  { icon: 'fas fa-user-friends', text: t('features.calendar.highlight2', locale) },
  { icon: 'fas fa-file-import', text: t('features.calendar.highlight3', locale) },
  { icon: 'fas fa-redo', text: t('features.calendar.highlight4', locale) },
];
---

<BaseLayout title={t('meta.calendarTitle', locale)} description={t('meta.calendarDesc', locale)}>
  <Navbar />

  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-b from-background to-[#1A1026] -z-10"></div>
    <div class="section-container text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-medium mb-6 reveal">
        <i class="fas fa-calendar-alt"></i>
        {t('features.calendar.name', locale)}
      </div>
      <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-linear-to-r from-primary to-secondary text-white mb-4">
        {t('features.calendar.badge', locale)}
      </span>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6 text-foreground reveal max-w-3xl mx-auto">
        {t('features.calendar.name', locale)}
      </h1>
      <p class="text-lg text-muted max-w-2xl mx-auto reveal">
        {t('features.calendar.desc', locale)}
      </p>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto reveal">
      <div class="rounded-2xl overflow-hidden border border-border shadow-xl">
        <div class="aspect-[16/9] bg-linear-to-br from-card to-border flex items-center justify-center">
          <div class="text-center">
            <i class="fas fa-calendar-alt text-5xl text-primary opacity-30 mb-3"></i>
            <p class="text-muted text-sm">Calendar Screenshot</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {highlights.map(h => (
          <div class="glass-card flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center shrink-0">
              <i class={`${h.icon} text-primary`}></i>
            </div>
            <span class="text-foreground font-medium">{h.text}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</BaseLayout>
