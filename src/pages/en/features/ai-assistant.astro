---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navbar from '../../../components/Navbar.astro';
import CTA from '../../../components/CTA.astro';
import Footer from '../../../components/Footer.astro';
import { t } from '../../../i18n/utils';

const locale = 'en';
const highlights = [
  { icon: 'fas fa-file-alt', text: t('features.ai.highlight1', locale) },
  { icon: 'fas fa-tasks', text: t('features.ai.highlight2', locale) },
  { icon: 'fas fa-comments', text: t('features.ai.highlight3', locale) },
  { icon: 'fas fa-coins', text: t('features.ai.highlight4', locale) },
];

const creditCosts = [
  { operation: 'Quick Summary', credits: '1' },
  { operation: 'Executive Summary', credits: '2' },
  { operation: 'Extract Action Items', credits: '1' },
  { operation: 'Task Breakdown (Simple)', credits: '1' },
  { operation: 'Task Breakdown (Complex)', credits: '2' },
  { operation: 'Workspace Chat (Quick)', credits: '1' },
  { operation: 'Workspace Chat (Context)', credits: '2' },
  { operation: 'Deep Workspace Analysis', credits: '5' },
];
---

<BaseLayout title={t('meta.aiTitle', locale)} description={t('meta.aiDesc', locale)}>
  <Navbar />

  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-background)] to-[#1A1026] -z-10"></div>
    <div class="section-container text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--color-primary)]/10 text-[var(--color-primary)] text-sm font-medium mb-6 reveal">
        <i class="fas fa-robot"></i>
        {t('features.ai.name', locale)}
      </div>
      <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] text-white mb-4">
        {t('features.ai.badge', locale)}
      </span>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6 text-[var(--color-foreground)] reveal max-w-3xl mx-auto">
        {t('features.ai.name', locale)}
      </h1>
      <p class="text-lg text-[var(--color-muted)] max-w-2xl mx-auto reveal">
        {t('features.ai.desc', locale)}
      </p>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto reveal">
      <div class="rounded-2xl overflow-hidden border border-[var(--color-border)] shadow-xl">
        <div class="aspect-[16/9] bg-gradient-to-br from-[var(--color-card)] to-[var(--color-border)] flex items-center justify-center">
          <div class="text-center">
            <i class="fas fa-robot text-5xl text-[var(--color-primary)] opacity-30 mb-3"></i>
            <p class="text-[var(--color-muted)] text-sm">AI Assistant Screenshot</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {highlights.map(h => (
          <div class="glass-card flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-[var(--color-primary)]/10 flex items-center justify-center shrink-0">
              <i class={`${h.icon} text-[var(--color-primary)]`}></i>
            </div>
            <span class="text-[var(--color-foreground)] font-medium">{h.text}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold text-center mb-8 text-[var(--color-foreground)] reveal">
        Credit Cost per Operation
      </h2>
      <div class="overflow-x-auto reveal">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-[var(--color-border)]">
              <th class="text-left py-3 px-4 font-semibold text-[var(--color-foreground)]">Operation</th>
              <th class="text-center py-3 px-4 font-semibold text-[var(--color-foreground)]">Credits</th>
            </tr>
          </thead>
          <tbody>
            {creditCosts.map(c => (
              <tr class="border-b border-[var(--color-border)]">
                <td class="py-3 px-4 text-[var(--color-foreground)]">{c.operation}</td>
                <td class="py-3 px-4 text-center font-semibold text-[var(--color-primary)]">{c.credits}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</BaseLayout>
