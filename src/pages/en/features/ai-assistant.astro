---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navbar from '../../../components/Navbar.astro';
import CTA from '../../../components/CTA.astro';
import Footer from '../../../components/Footer.astro';
import { t } from '../../../i18n/utils';

const locale = 'en';
const highlights = [
  { icon: 'fas fa-file-alt', text: t('features.ai.highlight1', locale) },
  { icon: 'fas fa-tasks', text: t('features.ai.highlight2', locale) },
  { icon: 'fas fa-comments', text: t('features.ai.highlight3', locale) },
  { icon: 'fas fa-coins', text: t('features.ai.highlight4', locale) },
];

const creditCosts = [
  { operation: 'Quick Summary', credits: '1' },
  { operation: 'Executive Summary', credits: '2' },
  { operation: 'Extract Action Items', credits: '1' },
  { operation: 'Task Breakdown (Simple)', credits: '1' },
  { operation: 'Task Breakdown (Complex)', credits: '2' },
  { operation: 'Workspace Chat (Quick)', credits: '1' },
  { operation: 'Workspace Chat (Context)', credits: '2' },
  { operation: 'Deep Workspace Analysis', credits: '5' },
];

const schema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Helixio AI Assistant",
  "applicationCategory": "ProductivityApplication",
  "description": t('meta.aiDesc', locale),
  "operatingSystem": "Web",
  "offers": { "@type": "Offer", "price": "1200000", "priceCurrency": "IDR" },
};
---

<BaseLayout title={t('meta.aiTitle', locale)} description={t('meta.aiDesc', locale)} schema={schema}>
  <Navbar />

  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-b from-background to-[#1A1026] -z-10"></div>
    <div class="section-container text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-medium mb-6 reveal">
        <i class="fas fa-robot"></i>
        {t('features.ai.name', locale)}
      </div>
      <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-linear-to-r from-primary to-secondary text-white mb-4">
        {t('features.ai.badge', locale)}
      </span>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6 text-foreground reveal max-w-3xl mx-auto">
        {t('features.ai.pageTitle', locale)}
      </h1>
      <p class="text-lg text-muted max-w-2xl mx-auto reveal">
        {t('features.ai.desc', locale)}
      </p>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto reveal">
      <div class="rounded-2xl overflow-hidden border border-border shadow-xl">
        <div class="aspect-[16/9] bg-linear-to-br from-card to-border flex items-center justify-center">
          <div class="text-center">
            <i class="fas fa-robot text-5xl text-primary opacity-30 mb-3"></i>
            <p class="text-muted text-sm">AI Assistant Screenshot</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {highlights.map(h => (
          <div class="glass-card flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center shrink-0">
              <i class={`${h.icon} text-primary`}></i>
            </div>
            <span class="text-foreground font-medium">{h.text}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-container !pt-0">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold text-center mb-8 text-foreground reveal">
        Credit Cost per Operation
      </h2>
      <div class="overflow-x-auto reveal">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-border">
              <th class="text-left py-3 px-4 font-semibold text-foreground">Operation</th>
              <th class="text-center py-3 px-4 font-semibold text-foreground">Credits</th>
            </tr>
          </thead>
          <tbody>
            {creditCosts.map(c => (
              <tr class="border-b border-border">
                <td class="py-3 px-4 text-foreground">{c.operation}</td>
                <td class="py-3 px-4 text-center font-semibold text-primary">{c.credits}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</BaseLayout>
